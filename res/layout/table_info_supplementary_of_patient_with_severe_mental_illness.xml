<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_height"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重性精神疾病患者个人信息补充表"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3" />

        <Button
            android:id="@+id/info_save_table_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_button_selector"
            android:text="保存" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/mental_illness_patient_name_info_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/serial_id"
                    android:text="编号:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:id="@+id/serial_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2001987-001"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="监护人姓名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/guardian_name_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="与患者关系:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/relation_with_guardian_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="监护人电话:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/guardian_telephone_et"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="监护人住址:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/guardian_address_et"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="辖区村（居）委会联系人:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/village_committee_linkman_et"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="电话:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <EditText
                    android:id="@+id/village_committee_telephone_et"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="知情同意"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <RadioGroup
                        android:id="@+id/informed_consent_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/informed_consent_rg0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 不同意参加管理" />

                        <RadioButton
                            android:id="@+id/informed_consent_rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="1 同意参加管理" />
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="签字："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/informed_consent_signature_et"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="签字时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <com.health.util.DateEditText
                        android:id="@+id/informed_consent_signature_date"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="初次发病时间："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <com.health.util.DateEditText
                    android:id="@+id/initial_onset_date"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/archive_edit_bg"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="既往主要症状:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <CheckBox
                        android:id="@+id/symptoms_of_past_0_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="1 幻觉"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_1_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="2 交流困难"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_2_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="3 猜疑"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_3_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="4 喜怒无常"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_4_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="5 行为怪异"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_5_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="6 兴奋话多"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <CheckBox
                        android:id="@+id/symptoms_of_past_6_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="7 伤人毁物"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_7_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="8 悲观厌世"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_8_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="9 无故外走"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_9_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="10 自语自笑"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_10_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="11 孤僻懒散"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <CheckBox
                        android:id="@+id/symptoms_of_past_11_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="12 其他"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/symptoms_of_past_other_et"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="既往治疗情况"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:text="门诊："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp" >

                    <RadioGroup
                        android:id="@+id/outpatient_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/outpatient_rg0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 未治" />

                        <RadioButton
                            android:id="@+id/outpatient_rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="2 间断门诊治疗" />

                        <RadioButton
                            android:id="@+id/outpatient_rg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="3 连续门诊治疗" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="首次抗精神病药治疗时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <com.health.util.DateEditText
                        android:id="@+id/initial_drug_treatment_date"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:ems="10"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" >

                        <requestFocus />
                    </com.health.util.DateEditText>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:text="住院："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:text="曾住精神专科医院/综合医院精神专科的次数:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/hospital_num_et"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="目前诊断情况"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="诊断结果："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/current_diagnosis_result_et"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="确诊医院："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/current_diagnosis_hospital_et"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="确诊日期："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <com.health.util.DateEditText
                        android:id="@+id/current_diagnosis_date"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="最近一次治疗效果："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RadioGroup
                        android:id="@+id/last_treatment_rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/last_treatment_rg0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 痊愈" />

                        <RadioButton
                            android:id="@+id/last_treatment_rg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="2 好转" />

                        <RadioButton
                            android:id="@+id/last_treatment_rg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="3 无变化" />

                        <RadioButton
                            android:id="@+id/last_treatment_rg3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="4 加重" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="患病对家庭社会的影响"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:text="1 轻度滋事次数："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_3" />

                    <EditText
                        android:id="@+id/info_mild_disturbances_num_et"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/archive_edit_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"

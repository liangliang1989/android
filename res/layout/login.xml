<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/topbg" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="村医健康"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_4"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/cont_bg03"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp" >

            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cont_bg03"
                android:orientation="vertical"
                android:padding="10dp" >

                <AutoCompleteTextView
                    android:id="@+id/cardNumAuto"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:hint="输入您的账号"
                    android:maxLength="18" />

                <EditText
                    android:id="@+id/et_passworld"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="输入您会员密码"
                    android:inputType="textPassword"
                    android:maxLength="16" />

                <CheckBox
                    android:id="@+id/save_password_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:hint="记住密码" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="医生登录" />

                <Button
                    android:id="@+id/btn_read_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logupButton"
                    android:text="用户刷卡检测" />

                <Button
                    android:id="@+id/logupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logup_button_bg"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:layout_weight="7"
                android:src="@drawable/desk_zte" />
            <!-- android:src="@drawable/pingantong/desk_zte/desk_beiken" -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/login_logo"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="健康管理系统"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
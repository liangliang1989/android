<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@drawable/topbg" >

        <TextView
            android:id="@+id/connect_status"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/unconnect" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_title"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />

            <TextView
                android:id="@+id/test_xuetang_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="300dp"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottombar"
        android:layout_below="@+id/topbar"
        android:layout_margin="5dp"
        android:background="@drawable/centerbg"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/cont_bg03"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/cont_bg03"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/urine_status_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/light_blue" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/leu"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/leu"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/nit"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/nit"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/ubg"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/ubg"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/pro"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pro"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/urine_status_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/light_blue" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/ph"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/pH"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/bld"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/bld"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/ket"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/ket"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/bil"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/bil"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/urine_status_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/light_blue" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/uglu"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/glu"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/vc"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/vc"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/sg"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/sg"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/bil"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:textSize="20sp"
                        android:visibility="invisible" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="测量时间:"
                        android:textColor="#ff444444"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/measure_time"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint=""
                        android:textColor="@color/datacolor"
                        android:textSize="20sp" />
                </TableRow>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/cont_bg03"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/get_data_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="获取测量数据" />

                <Button
                    android:id="@+id/find_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/finddevice_button_bg" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottombar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombg" >

        <Button
            android:id="@+id/to_home_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/all_homebtn"
            android:visibility="gone" >
        </Button>

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/upload"
            android:clickable="false" >
        </Button>

        <Button
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/all_returnbtn"
            android:visibility="gone" >
        </Button>
    </RelativeLayout>

</RelativeLayout>
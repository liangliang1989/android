<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topbar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbg" >

        <TextView
            android:id="@+id/connect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/unconnect" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_title"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />

            <TextView
                android:id="@+id/test_xuetang_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="300dp"
                android:textColor="#fffdfdfd"
                android:textSize="24px" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/botton_layout"
        android:layout_below="@+id/topbar"
        android:layout_centerVertical="true"
        android:background="@drawable/centerbg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/centerbg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cont_bg03"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/hp_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sys"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/hp"
                            android:layout_width="120sp"
                            android:layout_height="@dimen/edittext_size"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/datacolor"
                            android:textSize="@dimen/text_size_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/lp_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dia"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/lp"
                            android:layout_width="120sp"
                            android:layout_height="@dimen/edittext_size"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/datacolor"
                            android:textSize="@dimen/text_size_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHg"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/pulse_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_1"
                            android:text="@string/pulse"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/mb"
                            android:layout_width="120sp"
                            android:layout_height="@dimen/edittext_size"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/datacolor"
                            android:textSize="@dimen/text_size_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="bpm"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/bo_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_1"
                            android:text="血氧"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/bo"
                            android:layout_width="120sp"
                            android:layout_height="@dimen/edittext_size"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/datacolor"
                            android:textSize="@dimen/text_size_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/temp_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_1"
                            android:text="体温"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />

                        <EditText
                            android:id="@+id/temp"
                            android:layout_width="120sp"
                            android:layout_height="@dimen/edittext_size"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/datacolor"
                            android:textSize="@dimen/text_size_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="℃"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ecg_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/text_size_1"
                            android:text="心 电"
                            android:textColor="@color/duckgrey"
                            android:textSize="@dimen/text_size_1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bo_image_view"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/cont_bg03" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:text="@string/pc300_help"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/text_size_2" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/botton_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottombar_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cont_bg03"
        android:padding="2dp" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/find_device"
            android:background="@drawable/cont_bg03"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/start_stop_ecg_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_menu"
                    android:drawableLeft="@drawable/startmeasure"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="开始心电"
                    android:textColor="@color/color_main_menu"
                    android:textSize="@dimen/text_size_1" />

                <Button
                    android:id="@+id/bo_stable_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_menu"
                    android:drawableLeft="@drawable/startmeasure"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="锁定血氧值"
                    android:textColor="@color/color_main_menu"
                    android:textSize="@dimen/text_size_1" />

                <Button
                    android:id="@+id/start_stop_bp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_menu"
                    android:drawableLeft="@drawable/startmeasure"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="开始测量血压"
                    android:textColor="@color/color_main_menu"
                    android:textSize="@dimen/text_size_1" />

                <Button
                    android:id="@+id/upload_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_menu"
                    android:drawableLeft="@drawable/startmeasure"
                    android:enabled="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="上传数据"
                    android:textColor="@color/color_main_menu"
                    android:textSize="@dimen/text_size_1" />

                <Button
                    android:id="@+id/find_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_menu"
                    android:drawableLeft="@drawable/startmeasure"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="查找设备"
                    android:textColor="@color/color_main_menu"
                    android:textSize="@dimen/text_size_1" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</RelativeLayout>